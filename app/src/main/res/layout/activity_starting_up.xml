<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/LayoutStyle"
        tools:context=".StartingUpActivity">


    <TextView
            android:text="Welcome to Wasabee!"
            android:layout_width="318dp"
            android:layout_height="166dp"
            android:id="@+id/textWelcome" android:textSize="55dp"
            style="@style/TextStyle"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/goToMainMenuButton"
            app:layout_constraintVertical_bias="0.263"/>
    <Button
            android:text="!!Magic go-to-main-menu-button!! (Developers only pls)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goToMainMenuButton" android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="LOG IN"
            style="@style/TextStyle"
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:id="@+id/loginButton_login"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/yellow_button_2"
            app:layout_constraintHorizontal_bias="0.496"
            android:gravity="center" android:textSize="30dp"
            android:paddingBottom="10dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textWelcome" app:layout_constraintVertical_bias="0.125"/>
    <TextView
            android:text="Sign up"
            android:layout_width="200dp"
            android:layout_height="70dp"
            style="@style/TextStyle"
            android:id="@+id/signUpButton"
            app:layout_constraintTop_toBottomOf="@+id/loginButton_login" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/goToMainMenuButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.133"
            android:textSize="25dp"
            android:paddingBottom="10dp"/>
    <Button
            android:text="goToMessagesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goToMessagesButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/goToMainMenuButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>