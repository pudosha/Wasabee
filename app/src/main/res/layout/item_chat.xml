<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

    <TextView
            android:id="@+id/sender_name"
            android:text="John Doe:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/chat_name"
            android:textColor="@color/colorTextBlack"/>

    <TextView
            android:id="@+id/last_message"
            android:text="What do you mean..?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/chat_name"
            app:layout_constraintStart_toEndOf="@+id/sender_name"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/chat_name"
            android:text="Chat for cool bois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/colorTextBlack"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/time"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>