<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatListActivity">

    <Button
            android:text="New chat"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/newChatButton" app:layout_constraintStart_toEndOf="@+id/searchButton"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/searchButton" android:textSize="16sp"/>
    <Button
            android:text="Search"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/searchButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/chats" android:textSize="16sp"/>
    <Button
            android:text="Edit"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/editButton" app:layout_constraintEnd_toStartOf="@+id/searchButton"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/searchButton" android:textSize="16sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="170dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/chatList"/>
    </LinearLayout>
    <TextView
            android:text="@string/chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chats" android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>