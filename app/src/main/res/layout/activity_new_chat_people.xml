<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/LayoutStyle"
        tools:context=".NewChatPeopleActivity">
    <Button
            android:text="Add user"
            android:layout_width="90dp"
            style="@style/ButtonStyleDark"
            android:id="@+id/addUser" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_height="60dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/peopleList"/>
    </LinearLayout>
    <Button
            android:text="@string/create_chat"
            android:layout_width="90dp"
            style="@style/ButtonStyleDark"
            android:id="@+id/createChatNewPeopleActivity" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/usernameInput" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Type username to invite"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/chatNameInput"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Chat name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameInput"/>
</androidx.constraintlayout.widget.ConstraintLayout>